{
  "name": "pixelforge",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "translate": "npm run translate:pot && npm run translate:update",
    "translate:pot": "wp i18n make-pot . ./resources/lang/pixelforge.pot --include=\"theme.json,patterns,app,resources\"",
    "translate:update": "for file in ./resources/lang/*.po; do wp i18n update-po ./resources/lang/pixelforge.pot $file; done",
    "translate:compile": "npm run translate:mo && npm run translate:js",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print",
    "translate:mo": "wp i18n make-mo ./resources/lang ./resources/lang"
  },
  "devDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.53.3",
    "@roots/vite-plugin": "^1.0.2",
    "@tailwindcss/oxide": "^4.0.9",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.17",
    "@tailwindcss/vite": "^4.0.9",
    "laravel-vite-plugin": "^1.2.0",
    "lightningcss": "^1.30.2",
    "lightningcss-linux-x64-gnu": "^1.30.2",
    "sass": "^1.83.0",
    "sass-embedded": "^1.83.0",
    "sass-embedded-linux-x64": "^1.93.3",
    "slick-carousel": "^1.8.1",
    "tailwindcss": "^4.0.9",
    "vite": "^6.2.0"
  }
}
